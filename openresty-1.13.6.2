FROM centos
WORKDIR /tmp
RUN  yum install -y \
   readline-devel \
   pcre-devel \
   openssl-devel \
   gcc \
   make \
   wget \
   && wget https://openresty.org/download/openresty-1.13.6.2.tar.gz \
   && tar xf openresty-1.13.6.2.tar.gz 
WORKDIR  /tmp/openresty-1.13.6.2/
RUN  ./configure --prefix=/usr/local/resty \
   --with-http_v2_module \
   --with-file-aio \
   --with-stream \
   --with-stream_ssl_module \
   --with-http_ssl_module \
   && gmake \
   && gmake install
EXPOSE 80
